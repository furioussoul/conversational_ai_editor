{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    {
      "name": "Next.js: client",
      "type": "chrome",
      "request": "launch",
      "sourceMaps": true,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Next.js: debug (legacy)",
      "type": "node-terminal",
      "request": "launch",
      "sourceMaps": true,
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ],
  "compounds": [
    {
      "name": "Next.js: fullstack",
      "configurations": ["Next.js: server", "Next.js: client"]
    }
  ]
}
